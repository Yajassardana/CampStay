<%- include("../partials/header") %>
<div class="container" style="width:60%; max-width:500px; margin:0 auto;">
  <h1 style="text-align:center">Add New Campground</h1>
  <form action="/campgrounds" method="post">
    <div class="form-group">
      <input class="form-control" type="text" name="campground[name]" placeholder="Camp Name">
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" placeholder="Price per night">
    </div>
    <div class="form-group">
      <input class="form-control" type="link" name="campground[img]" placeholder="Image link">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="campground[description]" placeholder="Description">
        </div>
      <div class="form-group">
        <button class="btn btn-md btn-block btn-primary">Add!</button>
        </div>
  </form>
  <a href="/" class="text-primary">Go Back</a>
</div>
<%- include("../partials/footer") %>
