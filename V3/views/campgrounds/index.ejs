<%- include("../partials/header") %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
    <h1>Campgrounds</h1>
    <p>View our hand-picked collection of campgrounds from all over the world!</p>
    <p>
      <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a New Campground</a>
    </p>
    </div>
  </header>
  <div class="row" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(camp){ %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail text-center">
          <img src="<%=camp.img%>">
            <div class="caption">
                  <h4><%= camp.name %></h4>
            </div>
            <p>
              <a href="/campgrounds/<%=camp._id%>" class="btn btn-info btn-sm">More Info</a>
              </p>
        </div>
      </div>
    <% }); %>
  </div>

</div>

<%- include("../partials/footer") %>
