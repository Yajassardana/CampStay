<%-include("../partials/header")%>
<div class="container" style="width:60%; max-width:500px; margin:0 auto;">
  <h1 style="text-align:center">Add New Comment to <%=camp.name%></h1>
  <form action="/campgrounds/<%=camp._id%>/comments" method="post">
    <div class="form-group">
      <input class="form-control" type="text" name="comment[author]" placeholder="Author">
    </div>
    <div class="form-group">
      <input class="form-control" type="link" name="comment[text]" placeholder="Text">
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-block btn-primary">Add!</button>
        </div>
  </form>
  <a href="/campgrounds/<%=camp._id%>" class="text-primary">Go Back</a>
</div>
<%-include("../partials/footer")%>
